<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.FragmentCapacite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/fontColorTitre"
        android:orientation="vertical">

        <Spinner

            android:id="@+id/sp_capacite_categoriePersonnage"
            android:layout_width="275dp"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/ll_capacite_titre_premierligne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_capacite_categorie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_abreviation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_nomcomplet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />


            <TextView
                android:id="@+id/tv_capacite_maxpoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_degats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_pointactuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_initiation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_entrainement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_maitrise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_initiationpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_entrainementpoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />

            <TextView
                android:id="@+id/tv_capacite_matrisepoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:maxLines="1"

                android:textColor="@color/black"
                android:textSize="@dimen/taillepolicetableau" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_capacite_titre_deuxiemeligne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/tv_capacite_reglespeciale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bordertextlines"
                android:textColor="@color/black"

                android:textSize="@dimen/taillepolicetableau" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_capacite"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>