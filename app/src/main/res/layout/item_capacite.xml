<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_item_capacite_categorie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"

        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    <TextView
        android:id="@+id/tv_item_capacite_abreviation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:text=""
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />

    <TextView
        android:id="@+id/tv_item_capacite_nomcomplet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />


    <TextView
        android:id="@+id/tv_item_capacite_maxpoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    <TextView
        android:id="@+id/tv_item_capacite_degats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    <TextView
        android:id="@+id/tv_item_capacite_pointactuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    <TextView
        android:id="@+id/tv_item_capacite_initiation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"

        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    <TextView
        android:id="@+id/tv_item_capacite_entrainement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    <TextView
        android:id="@+id/tv_item_capacite_maitrise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"

        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    <TextView
        android:id="@+id/tv_item_capacite_initiationpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"

        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    <TextView
        android:id="@+id/tv_item_capacite_entrainementpoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"

        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    <TextView
        android:id="@+id/tv_item_capacite_matrisepoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"
        android:maxLines="1"
        android:textSize="@dimen/taillepolicetableau" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_item_capacite_reglespeciale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordertextlines"
        android:textColor="@color/black"
        android:textSize="@dimen/taillepolicetableau" />

</LinearLayout>